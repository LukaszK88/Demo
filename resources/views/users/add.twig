{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Add a new member
            </h1>
            <div class="col-lg-6 col-lg-offset-3">
                <form method="post" action="{{ path_for('add.user') }}" role="form">

                        <div class="form-group {{ errors.first_name ? 'has-error': '' }}">
                            <label>First name</label>
                            <input class="form-control" name="first_name" value="{{ old.first_name }}" placeholder="First name">
                            {% if errors.first_name %}
                                <span class="help-block">
                                    {{ errors.first_name | first }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.last_name ? 'has-error': '' }}">
                            <label>Last name</label>
                            <input class="form-control" name="last_name" value="{{ old.last_name }}" placeholder="Last name">
                            {% if errors.last_name %}
                                <span class="help-block">
                                    {{ errors.last_name | first }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.email ? 'has-error': '' }}">
                            <label>Email</label>
                            <input class="form-control" name="email" value="{{ old.email }}" placeholder="Email">
                            {% if errors.email %}
                                <span class="help-block">
                                    {{ errors.email | first }}
                                </span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.school ? 'has-error': '' }}">
                            <label>School</label><br>
                            <select class="selectpicker" name="school[]" multiple>

                                {% for school in schools %}

                                    <option value="{{ school.id }}">{{ school.school }}</option>

                                {% endfor %}

                            </select>
                            {% if errors.school %}
                                <span class="help-block">
                                    {{ errors.school | first }}
                                </span>
                            {% endif %}
                        </div>
                    <input type="submit" value="Add" class="btn btn-lg btn-success ">
                    {{ csrf.field | raw }}

                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}